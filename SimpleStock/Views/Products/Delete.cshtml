@model SimpleStock.Models.Product

@{
    Layout = null;
    ViewData["Title"] = "Deletar";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Excluir produto</h4>
        </div>
        <div class="modal-body">
            <p>Deseja excluir o produto  <strong>@Model.Name</strong></p>
        </div>
        <div class="modal-footer">
            <form asp-action="Delete" method="post">
                <input type="hidden"  name="id" value="@Model.Id"/>
                <input type="button" class="btn btn-danger btn-sm" data-dismiss="modal" value="Não">
                <input type="submit" class="btn btn-success btn-sm btnDelete" value="Sim">
            </form>
        </div>
    </div>
</div>
