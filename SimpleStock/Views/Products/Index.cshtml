@model IEnumerable<SimpleStock.Models.Product>

@{
    ViewData["Title"] = "Produtos   ";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Novo</a>
    <a asp-controller="Categories" asp-action="Create" class="btn btn-default">Nova Categoria</a>
</p>
<table class="table table-hover table-bordered text-center">
    <thead>
        <tr class="success">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalePrice)
            </th>
            <th>
                Investimento
            </th>
            <th>
                Retorno
            </th>
            <th>
                Lucro
            </th>
            <th>
                Percentual
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalePrice)
                </td>
                <td>
                    @item.CostSubtotal().ToString("C2")
                </td>
                <td>
                    @item.SaleSubtotal().ToString("C2")
                </td>
                <td>
                    @item.Profit().ToString("C2")
                </td>
                <td>
                    @item.ProfitMargin().ToString("P2")
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr class="success">
            <td><h4>Total:</h4></td>
            <td>
                <h4>
                    @{
                        if (Model.FirstOrDefault() != null)
                        {
                            var result = Model.FirstOrDefault().QttTotal(Model).ToString();
                            @Html.DisplayName(result);
                        }
                        else
                        {
                            @Html.DisplayName("0");
                        }
                    }
                </h4>
            </td>
            <td></td>
            <td></td>
            <td>
                <h4>
                    @{
                        if (Model.FirstOrDefault() != null)
                        {
                            var result = Model.FirstOrDefault().CostTotal(Model).ToString("F2");
                            @Html.DisplayName("R$" + result);
                        }
                        else
                        {
                            @Html.DisplayName("0,00");
                        }
                    }
                </h4>
            </td>
            <td>
                <h4>
                    @{
                        if (Model.FirstOrDefault() != null)
                        {
                            var result = Model.FirstOrDefault().SaleTotal(Model).ToString("F2");
                            @Html.DisplayName("R$" + result);
                        }
                        else
                        {
                            @Html.DisplayName("0,00");
                        }
                    }
                </h4>
            </td>
            <td>
                <h4>
                    @{
                        if (Model.FirstOrDefault() != null)
                        {
                            var result = Model.FirstOrDefault().ProfitTotal(Model).ToString("F2");
                            @Html.DisplayName("R$" + result);
                        }
                        else
                        {
                            @Html.DisplayName("0,00");
                        }
                    }
                </h4>
            </td>
            <td>
                <h4>

                    @{
                        if (Model.FirstOrDefault() != null)
                        {
                            var result = Model.FirstOrDefault().ProfitMarginTotal(Model).ToString("P2");
                            @Html.DisplayName(result);
                        }
                        else
                        {
                            @Html.DisplayName("0,00%");
                        }
                    }
                </h4>
            </td>
            <th></th>
        </tr>
    </tfoot>
</table>
<style>
    th {
        text-align:center;
    }
</style>