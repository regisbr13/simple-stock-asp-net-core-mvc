@model SimpleStock.Models.ViewModels.ProductFormViewModel

@{
    Layout = null;
    ViewData["Title"] = "Editar";
}
    
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Editar produto</h4>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                <form asp-action="Edit">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="Product.Id" />
                    <div class="form-group">
                        <label asp-for="Product.Name" class="control-label col-md-3"></label>
                        <div class="col-md-6">
                            <input asp-for="Product.Name" class="form-control" />
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.CostPrice" class="control-label col-md-3"></label>
                        <div class="col-md-6">
                            <input asp-for="Product.CostPrice" value="@Model.Product.CostPrice.ToString("F2")" class="form-control" onkeyup="k(this)" />
                            <span asp-validation-for="Product.CostPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.SalePrice" class="control-label col-md-3"></label>
                        <div class="col-md-6">
                            <input asp-for="Product.SalePrice" value="@Model.Product.SalePrice.ToString("F2")" class="form-control" onkeyup="k(this)" />
                            <span asp-validation-for="Product.SalePrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Product.CategoryId" class="control-label col-md-3"></label>
                        <div class="col-md-6">
                            <select asp-for="Product.CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))" class="form-control"></select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="button" class="btn btn-default btn-danger btn-sm" data-dismiss="modal" value="Cancelar">
                        <input type="submit" class="btn btn-success btn-sm" value="Salvar" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function k(i) {
        var v = i.value.replace(/\D/g, '');
        v = (v / 100).toFixed(2) + '';
        v = v.replace(".", ",");
        i.value = v;
    }
</script>

